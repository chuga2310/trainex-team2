<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:angle="-90"
                android:startColor="@color/blackAlpha"
                android:endColor="@color/backgroundItemList"
                android:type="linear" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="-2dp"
        android:right="-2dp"
        android:top="-2dp">
        <shape android:shape="rectangle" >
            <stroke
                android:width="1dp"
                android:color="@color/border" />

        </shape>
    </item>
</layer-list>