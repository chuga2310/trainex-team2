<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".uis.login_signup.StartActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/background_start_activity"
        android:scaleType="centerCrop"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:alpha="0.9"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="32dp">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/logo"
            android:id="@+id/imgStartLogo"
            android:layout_centerInParent="true"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/linearBottom"
            android:layout_marginBottom="32dp">
            <Button
                android:id="@+id/btnStartSignin"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Sign in"
                android:textAllCaps="false"
                android:textSize="18dp"
                android:textStyle="normal"
                android:textColor="@color/color_touchable"
                android:background="@drawable/background_button_start_touchable"/>
            <Button
                android:id="@+id/btnStartJoin"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Join now"
                android:textAllCaps="false"
                android:textSize="18dp"
                android:textStyle="normal"
                android:layout_marginTop="16dp"
                android:textColor="@color/color_touchable"
                android:background="@drawable/background_button_start_touchable"
                android:layout_alignBottom="@id/btnStartSignin"/>
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>