<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background_dialog_after_margin"
    android:paddingTop="48dp"
    android:paddingBottom="48dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">
    <TextView
        android:id="@+id/tvDlgAlertTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password Reset"
        style="@style/StyleTitleText"/>
    <TextView
        android:id="@+id/tvDlgAleatContent"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Please check your email for instructions to reset the password"
        android:textColor="@color/content"
        android:textSize="16dp"/>
    <Button
        android:id="@+id/btnDlgAlert"
        android:layout_marginTop="32dp"
        style="@style/ButtonLoginSignup"
        android:text="Ok"/>
</LinearLayout>
