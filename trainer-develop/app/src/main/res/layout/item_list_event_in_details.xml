<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_bottom_no_solid"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        style="@style/StyleTextWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="Spartan races and dedicated yoga event at Dubai, United Arab Emirates"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvTime"
        style="@style/StyleYellow16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="12 - june -2018, 10:30 AM" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="top">

        <android.support.v7.widget.CardView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginRight="8dp"
            app:cardCornerRadius="10dp">

            <ImageView

                android:id="@+id/imgEvent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_gravity="top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvLocation"
                style="@style/StyleTextWhite"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvContent"
                style="@style/StyleTextContent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Popular belief, Lorem Ipsum is not simply random text. It has roots in a piece of classical." />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPrice"
            style="@style/StyleYellow16dp"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@drawable/background_button_in_event_detail"
            android:text="100.00 AED" />

        <Button
            android:id="@+id/btnViewDetailEvent"
            style="@style/StyleTextWhite"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@drawable/background_button_in_event_detail"
            android:text="View Details"
            android:textAllCaps="false"
            android:textSize="16sp" />

        <Button

            android:id="@+id/btnBookNow"
            style="@style/StyleTextWhite"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:background="@drawable/background_button_in_event_detail"
            android:text="Book Now"
            android:textAllCaps="false"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>