<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
    android:background="@drawable/border_bottom_no_solid">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <TextView
           android:layout_centerVertical="true"
           android:id="@+id/tvOrder"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           style="@style/StyleYellow16dp"
           android:text="Order ID:  "/>
       <TextView
           android:id="@+id/tvOrderIDSessions"
           android:layout_centerVertical="true"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           style="@style/StyleTextContent"
           android:layout_toRightOf="@id/tvOrder"
           android:text="1234567"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           style="@style/StyleTextWhite"
           android:textSize="16sp"
           android:id="@+id/tvPrice"
           android:text="100.00 AED"
           android:layout_alignParentEnd="true"/>
   </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/StyleTextContent"
            android:text="Session:  "/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="6 Sessions"
            android:id="@+id/tvSessions"
            style="@style/StyleTextContent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/StyleTextContent"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Trainer:  "/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="George"
            android:id="@+id/tvTrainer"
            style="@style/StyleTextContent"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/layoutTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/StyleTextContent"
                android:text="Purchased on :"/>
            <TextView
                android:id="@+id/tvTime"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/StyleTextContent"
                android:text="12 - May - 2018, 10:00 AM"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/imgCall"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/icon_call_white"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/layoutTime"/>
    </RelativeLayout>
</LinearLayout>