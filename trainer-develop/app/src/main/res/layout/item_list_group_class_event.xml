<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingBottom="16dp"
    android:background="@drawable/border_bottom_no_solid">
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Spartan races and dedicated yoga event at Dubai, United Arab Emirates"
        style="@style/StyleTextWhite"/>
    <TextView
        android:id="@+id/tvTrainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="by George"
        style="@style/StyleTextContent"
        android:layout_marginTop="8dp"/>
    <android.support.v7.widget.CardView
        android:id="@+id/imgEvent"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardCornerRadius="10dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imgResImageEvent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:riv_corner_radius="10dp"
                android:scaleType="centerCrop"/>
            <FrameLayout
                android:layout_width="75dp"
                android:layout_height="match_parent">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.9"
                    android:background="@drawable/background_yellow_10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12\nSEP"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"/>
                    <TextView
                        android:id="@+id/tvTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="10:30\nAM"
                        android:textColor="@color/content"
                        android:textSize="18sp"/>
                </LinearLayout>
            </FrameLayout>
        </FrameLayout>
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location:"
            style="@style/StyleTextContent"/>
        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="Dubai, Jumeirah Beach"
            style="@style/StyleTextWhite"
            android:textSize="16sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price:"
            style="@style/StyleTextContent"/>
        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="100.00 AED"
            style="@style/StyleTextWhite"
            android:textSize="16sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">
        <Button
            android:id="@+id/btnBookNow"
            style="@style/ButtonLoginSignup"
            android:text="Book Now"
            android:textSize="16sp"
            android:layout_height="40dp"
            android:textColor="@color/colorAccent"
            android:layout_width="120dp"/>
        <Button
            android:id="@+id/btnViewDetails"
            android:layout_marginLeft="8dp"
            style="@style/ButtonLoginSignup"
            android:text="View Detail"
            android:textSize="16sp"
            android:textColor="@color/content"
            android:layout_width="120dp"
            android:layout_height="40dp"/>
    </LinearLayout>
</LinearLayout>