<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_bottom_no_solid"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="16dp"
    android:paddingTop="16dp">

    <android.support.v7.widget.CardView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginRight="8dp"
        app:cardCornerRadius="5dp">

        <ImageView
            android:id="@+id/imgAvatar"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvAboutReview"
            style="@style/StyleTextWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Popular belief, Lorem Ipsum is not simply random text. It has roots in a "
            android:textSize="16sp" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="0.5"
            android:rating="5"
            style="?android:ratingBarStyleSmall"
            android:theme="@style/RatingBar"
            android:progressTint="@color/colorAccent"/>

        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvName"
                style="@style/StyleTextContent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Amanda Jenkins"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvTimeReview"
                style="@style/StyleTextContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 - Junâ€™ 18" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>